# Dockerfile_produccion

FROM python:3.11-slim

# Establecer directorio de trabajo
WORKDIR /app

# Copiar requirements e instalar dependencias primero (aprovecha el cache de Docker)
COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# Copia el resto del código
COPY . .

# Crea directorios persistentes para logs y datos si no existen
RUN mkdir -p /app/logs /app/data && chmod -R 777 /app/logs /app/data

# Puerto por defecto de FastAPI
EXPOSE 8000

# Comando de arranque (ajusta si tu app principal está en otra carpeta o con otro nombre)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--log-config", "logging_config.yml"]

